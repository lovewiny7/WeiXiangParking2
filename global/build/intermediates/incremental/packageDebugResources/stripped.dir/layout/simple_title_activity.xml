    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/simple_title_activity_0">

        <RelativeLayout
            android:id="@+id/ll_title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/grey_apple"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:tag="binding_1"   
                android:scaleType="fitXY"
                android:padding="12dp"
                android:src="@mipmap/ic_back" />

            <TextView
                android:id="@+id/tv_left_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/iv_back"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="标题"
                android:textColor="#000000"
                android:textSize="@dimen/sp_16"

                />

            <ImageView
                android:id="@+id/iv_right_one"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/tv_right_one"
                android:layout_alignParentEnd="true"
                android:tag="binding_2"   
                android:padding="12dp"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/tv_right_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:tag="binding_3"   
                android:text="保存"
                android:maxLines="1"
                android:layout_marginEnd="@dimen/dp_20"
                android:textColor="@color/orange"
                android:textSize="@dimen/sp_16" />


        </RelativeLayout>

        <View
            android:id="@+id/line_title"
            style="@style/line_1dp" />

        <!--<LinearLayout-->
            <!--android:id="@+id/ll_sub_view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:orientation="vertical">-->


        <!--</LinearLayout>-->
    </LinearLayout>
         