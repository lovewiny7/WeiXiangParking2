<?xml version="1.0" encoding="utf-8"?>
                                                            

    

                 
                            
                                      

                 
                        
                                                       
           

    <com.weixiang.parking.weixiangparking.ui.view.MyDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/a_home_0" xmlns:app="http://schemas.android.com/apk/res-auto">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_apple"
                android:orientation="vertical"
                android:padding="@dimen/dp_20">

                <!--车场名称-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_parking_name"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="招商银行大厦"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_18"

                        />

                    <ImageView
                        android:id="@+id/iv_top_menu"
                        android:layout_width="30dp"
                        android:layout_height="@dimen/dp_20"
                        android:tag="binding_1"   
                        android:src="@mipmap/ic_top_menu" />

                    <ImageView
                        android:id="@+id/iv_top_camera"
                        android:layout_width="30dp"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_15"
                        android:tag="binding_2"   
                        android:src="@mipmap/ic_top_camera" />
                </LinearLayout>

                <!--车辆信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/shape_home_top_radius"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dp_20"
                    android:paddingStart="@dimen/dp_20">

                    <TextView
                        android:id="@+id/tv_plate_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:text="京.J5203"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.global.winy7.view.CustomTextView.RTextView
                        android:id="@+id/tv_car_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#B3ffffff"
                        android:gravity="center"
                        android:paddingEnd="@dimen/dp_4"
                        android:paddingStart="@dimen/dp_4"
                        android:text="临时车"
                        android:textColor="#E58A2D"
                        android:textSize="20sp"
                        app:corner_radius="@dimen/dp_4" />

                    <TextView
                        android:id="@+id/tv_parking_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="45分钟"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_22" />

                </LinearLayout>
                <!--进出场信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_home_bottom_radius"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="1dp"
                        android:orientation="vertical"
                        android:paddingEnd="@dimen/dp_20"
                        android:paddingStart="@dimen/dp_20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="入场时间"
                            android:textColor="#999999"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_enter_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="2019-10-18 14:33:26"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_22"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="出场时间"
                            android:textColor="#999999"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="2019-10-18 14:33:26"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_22"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="停车时长"
                            android:textColor="#999999"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="45分钟"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_22"
                            android:textStyle="bold" />

                        <View
                            style="@style/line_1dp_grey"
                            android:layout_marginTop="@dimen/dp_20"
                            android:background="@drawable/line_8dp_with_border" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:gravity="center"
                                android:text="应收费用"
                                android:textColor="#999999"
                                android:textSize="@dimen/sp_18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_5"
                                android:gravity="center"
                                android:text="34元"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_22"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_15"
                                android:background="@drawable/text_left_border_1dp"
                                android:gravity="center"
                                android:text="实收费用"
                                android:textColor="#999999"
                                android:textSize="@dimen/sp_18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/text_left_border_1dp"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_5"
                                android:text="34元"
                                android:textColor="#333333"
                                android:textSize="@dimen/sp_22"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:text="车辆进场"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_enter_bg" />
                <!-- 车辆进场数据-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="在场车辆"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/text_left_border_1dp"
                            android:gravity="center"
                            android:text="入场时间"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/text_left_border_1dp"
                            android:gravity="center"
                            android:text="停车区域"
                            android:textColor="#000000"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>

                    <View style="@style/line_1dp" />

                    <android.support.v4.widget.SwipeRefreshLayout
                        android:id="@+id/swl_refresh"
                        android:layout_width="match_parent"
                        android:layout_height="250dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </android.support.v4.widget.SwipeRefreshLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:text="缴费放行"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_pay_out" />
                <!-- 缴费放行-->
                <GridView
                    android:id="@+id/gv_menu"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:horizontalSpacing="@dimen/dp_10"
                    android:numColumns="auto_fit"
                    android:verticalSpacing="@dimen/dp_10"

                    />
            </LinearLayout>

        </ScrollView>

        <fragment
            android:id="@+id/left_menu"
            android:name="com.weixiang.parking.weixiangparking.ui.activity.A_LeftMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start" />
    </com.weixiang.parking.weixiangparking.ui.view.MyDrawerLayout>
         